<%= simple_form_for(@bookmark, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :url, input_html: {class: "input-xxlarge"} %>
    <%= f.input :title, input_html: {class: "input-xxlarge"} %>
    <%= f.input :tag_list, input_html: {class: "input-xxlarge"} %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
