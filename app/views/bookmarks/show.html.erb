<table class="table table-bordered">
  <tr>
    <td colspan="2" style="text-align: center"><%= image_tag @bookmark.screenshot.url %></td>
  </tr>
  <tr>
    <th>Url</th>
    <td><%= @bookmark.url %></td>
  </tr>
  <tr>
    <th>Title</th>
    <td><%= @bookmark.title %></td>
  </tr>
  <tr>
    <th>Tags</th>
    <td><%= @bookmark.tag_list.join(',') %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_bookmark_path(@bookmark) %> |
<%= link_to 'Back', bookmarks_path %>
